    def clear(self):
        self.linkInput.setText("")

    def download(self):
        link = self.linkInput.text()
        if link == "":
            pass
        else:
            try:
                yt_video_url = YouTube("https://www.youtube.com/watch?v=glN0W8WogK8")
                yt_video_url.streams.filter(only_audio=True, file_extension="mp4").get_by_itag(139).download()
            except:
                print("Error hapened")

